<p id="notice"><%= notice %></p>

<h1>Employers</h1>

<%= page_entries_info @employers %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Address</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @employers.each do |employer| %>
      <tr>
        <td><%= link_to employer.name, employer %></td>
        <td><%= employer.description %></td>
        <td><%= employer.address %></td>
        <% if can? :manage, employer %>
          <td><%= link_to 'Edit', edit_employer_path(employer) %></td>
          <td><%= link_to 'Destroy', employer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @employers, theme: 'twitter-bootstrap-4' %>

<br>

<%= link_to 'New Employer', new_employer_path if can? :create, Employer%>
