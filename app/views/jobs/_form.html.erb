<%= bootstrap_form_for(job) do |f| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-8">
      <%= f.text_field :title %>
      <%= f.text_area :description, rows: 15 %>
      <%= f.text_field :tag_list, value: f.object.tag_list.join(',') %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :url %>
      <%= f.text_area :contact %>

      <%= f.text_field :employer_name %>
      <%= f.text_area :location %>
      <hr />
      <%= f.select :job_type, Job.job_types.keys.map { |t| [t.humanize, t] } %>
      <%= f.check_box :telecommute %>
    </div>
  </div>
  

  <div class="actions">
    <%= f.submit class: 'btn btn-primary' %>
  </div>
<% end %>
